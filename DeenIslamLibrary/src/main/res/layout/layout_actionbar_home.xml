<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="@dimen/space_8"
    tools:viewBindingIgnore="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/deen_white">


    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/space_12.5"
        android:paddingStart="@dimen/space_16"
        android:paddingEnd="@dimen/space_8"
        android:layout_marginBottom="@dimen/space_12.5"
        android:src="@drawable/ic_back"
        android:scaleX="0.8"
        android:scaleY="0.8"
        app:layout_constraintEnd_toStartOf="@+id/btnLogo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnLogo"
        android:layout_width="31dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/space_12.5"
        android:layout_marginBottom="@dimen/space_12.5"
        android:src="@drawable/ic_deen_ibadah"
        app:layout_constraintEnd_toStartOf="@+id/title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnBack"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginTop="@dimen/space_15"
        android:layout_marginBottom="@dimen/space_15"
        android:layout_marginStart="@dimen/space_8"
        android:textColor="@color/deen_primary"
        android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
        android:text="@string/ibadah"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnLogo"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/action1"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:paddingStart="@dimen/space_4"
        android:paddingEnd="@dimen/space_4"
        android:layout_marginEnd="@dimen/space_16"
        android:src="@drawable/ic_notification"
        app:layout_constraintEnd_toStartOf="@id/action2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/action2"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:paddingStart="@dimen/space_4"
        android:paddingEnd="@dimen/space_4"
        android:layout_marginEnd="@dimen/space_16"
        android:src="@drawable/ic_avatar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
         />

</androidx.constraintlayout.widget.ConstraintLayout>