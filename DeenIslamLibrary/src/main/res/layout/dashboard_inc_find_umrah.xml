<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/deen_white"
    android:layout_marginStart="@dimen/space_16"
    android:layout_marginTop="@dimen/space_16"
    android:layout_marginEnd="@dimen/space_16"
    android:layout_marginBottom="1dp"
    tools:viewBindingIgnore="true"
    app:cardCornerRadius="@dimen/space_8"
    app:cardElevation="1dp"
    app:strokeWidth="0dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.appcompat.widget.AppCompatImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:adjustViewBounds="true"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_12"
            android:textAlignment="center"
            android:gravity="center"
            android:text="Find the best tour packages for"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/deen_txt_black" />


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/space_12"
            android:text="Umrah Hajj"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Subhead"
            android:textColor="@color/deen_txt_black" />


        <com.google.android.material.button.MaterialButton
            android:id="@+id/seeAllUmrahPack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:icon="@drawable/ic_next"
            app:iconTint="@color/deen_primary"
            app:iconGravity="textEnd"
            android:layout_marginTop="@dimen/space_8"
            android:layout_marginStart="@dimen/space_12"
            android:layout_marginEnd="@dimen/space_12"
            android:layout_marginBottom="@dimen/space_4"
            android:text="See all packages"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/deen_primary"
            android:background="@android:color/transparent"
            app:cornerRadius="6dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/createOtherHint"
            />


    </LinearLayout>


</com.google.android.material.card.MaterialCardView>
