<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardBackgroundColor="@color/deen_white"
    app:cardElevation="1dp"
    app:strokeWidth="0dp"
    tools:viewBindingIgnore="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/space_4">

        <RadioButton
            android:id="@+id/prayerCheck"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minWidth="0dp"
            android:button="@drawable/radio_button_gp"
            android:minHeight="0dp"
            android:clickable="false"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/waktTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="0dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/deen_gp_txt_black"
            tools:text="@string/prayer_fajr"
            app:layout_constraintTop_toBottomOf="@+id/prayerCheck"
            app:layout_constraintEnd_toEndOf="@+id/prayerCheck"
            app:layout_constraintStart_toStartOf="@+id/prayerCheck"/>



        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/waktTimeTxt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="0dp"
            android:textAppearance="@style/DeenTextAppearance.font10"
            android:textColor="@color/deen_gp_txt_gray_secondary"
            tools:text="4:13 AM"
            app:layout_constraintTop_toBottomOf="@+id/waktTxt"
            app:layout_constraintEnd_toEndOf="@+id/waktTxt"
            app:layout_constraintStart_toStartOf="@+id/waktTxt"/>


    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.material.card.MaterialCardView>