<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/space_8"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    tools:viewBindingIgnore="true"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <com.deenislamic.sdk.utils.AspectRatioImageView
        android:id="@+id/menuIcon"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/space_7"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.google.android.material.button.MaterialButton
        android:visibility="gone"
        tools:visibility="visible"
        android:id="@+id/newBtn"
        style="@style/Widget.Material3.Button.ElevatedButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/deen_white"
        app:cornerRadius="100dp"
        tools:text=" 3 New"
        android:clickable="false"
        app:iconTint="@color/deen_gp_txt_gray_secondary"
        app:backgroundTint="@color/deen_gp_red"
        app:strokeColor="@color/deen_white"
        app:strokeWidth="1dp"
        app:elevation="1dp"
        android:padding="4dp"
        android:insetTop="0dp"
        android:insetBottom="0dp"
        android:minWidth="36dp"
        android:minHeight="16dp"
        android:layout_marginTop="-7dp"
        android:layout_marginStart="-28dp"
        app:layout_constraintTop_toTopOf="@+id/menuIcon"
        app:layout_constraintStart_toEndOf="@+id/menuIcon"/>

    <View
        android:visibility="gone"
        tools:visibility="visible"
        android:id="@+id/redDot"
        android:layout_width="6dp"
        android:layout_height="6dp"
        android:background="@drawable/item_deen_gphome_reddot"
        android:layout_marginTop="6dp"
        android:layout_marginStart="-6dp"
        app:layout_constraintTop_toTopOf="@+id/menuIcon"
        app:layout_constraintStart_toEndOf="@+id/menuIcon"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:visibility="gone"
        android:id="@+id/moreCount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        tools:text="21+"
        android:gravity="center"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/deen_gp_txt_black"
        app:layout_constraintEnd_toEndOf="@+id/menuIcon"
        app:layout_constraintStart_toStartOf="@+id/menuIcon"
        app:layout_constraintTop_toTopOf="@+id/menuIcon"
        app:layout_constraintBottom_toBottomOf="@+id/menuIcon"/>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/menuTitile"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="2dp"
        android:paddingEnd="2dp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/space_8"
        android:layout_marginBottom="@dimen/space_16"
        tools:text="Menu Name"
        android:gravity="center"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/deen_txt_black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/menuIcon" />


</androidx.constraintlayout.widget.ConstraintLayout>