<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="?android:attr/actionBarSize"
    xmlns:tools="http://schemas.android.com/tools"
    android:elevation="1dp"
    tools:viewBindingIgnore="true"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/deen_white">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/btnBack"
        android:layout_width="wrap_content"
        android:layout_height="48dp"
        android:layout_marginTop="@dimen/space_12.5"
        android:paddingStart="@dimen/space_16.5"
        android:paddingEnd="@dimen/space_16.5"
         android:layout_marginBottom="@dimen/space_12.5"
        android:src="@drawable/ic_back"
        app:layout_constraintEnd_toStartOf="@+id/title"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:layout_marginEnd="@dimen/space_8"
        android:layout_marginTop="@dimen/space_15"
        android:layout_marginBottom="@dimen/space_15"
        android:layout_marginStart="@dimen/space_8"
        android:text="@string/app_name"
        android:maxLines="1"
        android:ellipsize="end"
        android:textStyle="bold"
        android:textColor="@color/deen_primary"
        android:textAppearance="@style/TextAppearance.AppCompat.Title"
        app:layout_constraintEnd_toStartOf="@+id/action1"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/btnBack"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/action1"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="@dimen/space_10"
        android:layout_marginEnd="@dimen/space_4"
        android:contentDescription="action1"
        android:src="@drawable/ic_notification"
        app:layout_constraintEnd_toStartOf="@id/action2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/action2"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="@dimen/space_10"
        android:contentDescription="action2"
        android:layout_marginEnd="@dimen/space_4"
        android:src="@drawable/ic_avatar"
        app:layout_constraintEnd_toStartOf="@id/action3"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/action3"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="@dimen/space_10"
        android:contentDescription="action3"
        android:layout_marginEnd="@dimen/space_4"
        android:src="@drawable/ic_avatar"
        app:layout_constraintEnd_toStartOf="@id/btnCalendar"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnCalendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/space_8"
        android:textAppearance="@style/TextAppearance.AppCompat.Body1"
        android:textColor="@color/deen_primary"
        app:icon="@drawable/ic_calendar"
        app:backgroundTint="@color/deen_card_bg"
        android:background="@android:color/transparent"
        app:cornerRadius="18dp"
        app:strokeColor="@color/deen_border"
        app:strokeWidth="0dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>



</androidx.constraintlayout.widget.ConstraintLayout>