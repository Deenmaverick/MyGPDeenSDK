<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:viewBindingIgnore="true"
    android:padding="@dimen/space_12"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/deen_white"
    >

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textColor="@color/deen_gp_black"
        android:text="Ibadah"
        android:textStyle="bold"
        app:layout_constraintTop_toTopOf="@+id/location"
        app:layout_constraintBottom_toBottomOf="@+id/location"
        app:layout_constraintStart_toStartOf="parent"/>


    <com.google.android.material.button.MaterialButton
        android:id="@+id/location"
        style="@style/Widget.Material3.Button.ElevatedButton.Icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/space_4"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/deen_gp_primary"
        app:cornerRadius="100dp"
        android:text="Dhaka"
        app:iconTint="@color/deen_gp_primary"
        app:icon="@drawable/ic_deen_gp_icon_marker"
        app:backgroundTint="@color/deen_white"
        app:strokeColor="@color/deen_gp_border"
        app:strokeWidth="1dp"
        app:elevation="1dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <com.google.android.material.card.MaterialCardView
        android:id="@+id/dateCardView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:cardCornerRadius="2dp"
        app:strokeWidth="0dp"
        app:layout_constraintTop_toBottomOf="@+id/location"
        app:layout_constraintStart_toStartOf="parent">
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/space_6"
            android:background="@drawable/bg_deen_gp_date">

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/monthShort"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Caption"
                android:textColor="@color/deen_white"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:text="MAR"/>


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/deen_gp_txt_gray"
                app:layout_constraintTop_toBottomOf="@+id/monthShort"
                app:layout_constraintStart_toStartOf="@+id/monthShort"
                app:layout_constraintEnd_toEndOf="@+id/monthShort"
                android:text="22"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.google.android.material.card.MaterialCardView>


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/dateArabic"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/space_8"
        android:paddingEnd="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/deen_gp_txt_black"
        app:layout_constraintBottom_toTopOf="@+id/islamicEvent"
        app:layout_constraintVertical_chainStyle="packed"
        app:layout_constraintTop_toTopOf="@+id/dateCardView"
        app:layout_constraintStart_toEndOf="@+id/dateCardView"
        android:text="15 Shaban 1443 AH"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/islamicEvent"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/space_8"
        android:paddingEnd="0dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Caption"
        android:textColor="@color/deen_gp_txt_black"
        app:layout_constraintTop_toBottomOf="@+id/dateArabic"
        app:layout_constraintStart_toStartOf="@+id/dateArabic"
        app:layout_constraintEnd_toEndOf="@+id/dateArabic"
        app:layout_constraintBottom_toBottomOf="@+id/dateCardView"
        android:text="Shab e Barat"/>

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/bgPrayer"
        android:layout_width="227dp"
        android:layout_height="179dp"
        android:layout_marginTop="@dimen/space_16"
        android:src="@drawable/bg_deen_gp_prayer"
        app:layout_constraintTop_toBottomOf="@+id/dateCardView"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="@+id/bgPrayer"
        app:layout_constraintEnd_toEndOf="@id/bgPrayer"
        app:layout_constraintStart_toStartOf="@id/bgPrayer"
        app:layout_constraintTop_toTopOf="@+id/bgPrayer"
        app:layout_constraintVertical_bias="0.79">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nowTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Now"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/deen_gp_txt_gray_secondary"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/prayerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:text="Forbidden Time"
            android:textAppearance="@style/TextAppearance.AppCompat.Title"
            android:textColor="@color/deen_gp_txt_gray_secondary"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/nowTv" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/prayerTimeLy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            app:layout_constraintEnd_toEndOf="@+id/prayerName"
            app:layout_constraintStart_toStartOf="@+id/prayerName"
            app:layout_constraintTop_toBottomOf="@+id/prayerName">

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/icClock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_deen_gp_clock"
                app:layout_constraintBottom_toBottomOf="@id/startTime"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/startTime" />

            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/startTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="@dimen/space_8"
                android:text="6:23 PM"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/deen_gp_txt_gray_secondary"
                android:textStyle="bold"
                app:layout_constraintStart_toEndOf="@+id/icClock"
                app:layout_constraintTop_toTopOf="parent" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/hypenTv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingStart="2dp"
                android:paddingEnd="2dp"
                android:text="-"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/deen_gp_txt_gray_secondary"
                app:layout_constraintBottom_toBottomOf="@+id/startTime"
                app:layout_constraintStart_toEndOf="@+id/startTime"
                app:layout_constraintTop_toTopOf="@+id/startTime" />


            <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6:23 PM"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textColor="@color/deen_gp_txt_gray_secondary"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@+id/startTime"
                app:layout_constraintStart_toEndOf="@+id/hypenTv" />

        </androidx.constraintlayout.widget.ConstraintLayout>


        <androidx.appcompat.widget.AppCompatTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_8"
            android:text="Ifar at: 6:52 AM"
            android:textAppearance="@style/TextAppearance.AppCompat.Body1"
            android:textColor="@color/deen_gp_txt_gray_secondary"
            app:layout_constraintEnd_toEndOf="@+id/prayerTimeLy"
            app:layout_constraintStart_toStartOf="@+id/prayerTimeLy"
            app:layout_constraintTop_toBottomOf="@+id/prayerTimeLy" />


    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:id="@+id/line1"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@drawable/ic_deen_gp_line"
        app:layout_constraintTop_toBottomOf="@+id/bgPrayer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>


    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/nextPrayerLy"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/space_8"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/line1">

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nextTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Next: "
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/deen_gp_txt_gray_secondary"
            app:layout_constraintBottom_toBottomOf="@id/nextPrayerName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="@+id/nextPrayerName" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nextPrayerName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Isha • "
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/deen_gp_txt_gray"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/nextTv"
            app:layout_constraintTop_toTopOf="parent" />


        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/startingTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Starting in:"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/deen_gp_txt_gray_secondary"
            app:layout_constraintBottom_toBottomOf="@id/nextPrayerName"
            app:layout_constraintStart_toEndOf="@+id/nextPrayerName"
            app:layout_constraintTop_toTopOf="@+id/nextPrayerName" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/nextPrayerTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="02:50:37"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/deen_gp_txt_gray"
            android:textStyle="bold"
            app:layout_constraintStart_toEndOf="@+id/startingTv"
            app:layout_constraintTop_toTopOf="@+id/startingTv"
            app:layout_constraintBottom_toBottomOf="@+id/startingTv"/>

    </androidx.constraintlayout.widget.ConstraintLayout>


    <View
        android:id="@+id/line2"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/space_8"
        android:background="@drawable/ic_deen_gp_line"
        app:layout_constraintTop_toBottomOf="@+id/nextPrayerLy"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/space_12"
        app:layout_constraintTop_toTopOf="@+id/line2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/fajrBtn"
            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/deen_gp_primary"
            app:cornerRadius="100dp"
            android:text="Fajr"
            app:iconGravity="textEnd"
            app:iconPadding="2dp"
            app:iconTint="@color/deen_gp_primary"
            app:icon="@drawable/ic_deen_gp_check"
            app:backgroundTint="@color/deen_white"
            app:strokeColor="@color/deen_gp_border"
            app:strokeWidth="1dp"
            app:elevation="1dp"
            android:padding="@dimen/space_6"
            android:minWidth="60dp"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/duhurBtn"
            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_4"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/deen_gp_primary"
            app:cornerRadius="100dp"
            android:text="Duhur"
            app:iconPadding="2dp"
            app:iconGravity="textEnd"
            app:iconTint="@color/deen_gp_primary"
            app:icon="@drawable/ic_deen_gp_check"
            app:backgroundTint="@color/deen_white"
            app:strokeColor="@color/deen_gp_border"
            app:strokeWidth="1dp"
            app:elevation="1dp"
            android:padding="@dimen/space_6"
            android:minWidth="60dp"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/asrBtn"
            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_4"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/deen_gp_primary"
            app:cornerRadius="100dp"
            android:text="Asr"
            app:iconPadding="2dp"
            app:iconGravity="textEnd"
            app:iconTint="@color/deen_gp_primary"
            app:icon="@drawable/ic_deen_gp_check"
            app:backgroundTint="@color/deen_white"
            app:strokeColor="@color/deen_gp_border"
            app:strokeWidth="1dp"
            app:elevation="1dp"
            android:padding="@dimen/space_6"
            android:minWidth="60dp"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/maghribBtn"
            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_4"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/deen_gp_txt_gray_secondary"
            app:cornerRadius="100dp"
            android:text="Maghrib"
            app:iconTint="@color/deen_gp_txt_gray_secondary"
            app:icon="@drawable/ic_deen_gp_time_off"
            app:backgroundTint="@color/deen_white"
            app:strokeColor="@color/deen_gp_border"
            app:strokeWidth="1dp"
            app:elevation="1dp"
            app:iconPadding="2dp"
            android:padding="@dimen/space_6"
            android:minWidth="60dp"/>


        <com.google.android.material.button.MaterialButton
            android:id="@+id/ishaBtn"
            style="@style/Widget.Material3.Button.ElevatedButton.Icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/space_4"
            android:textAppearance="@style/TextAppearance.AppCompat.Caption"
            android:textColor="@color/deen_gp_txt_gray_secondary"
            app:cornerRadius="100dp"
            android:text="Isha"
            app:iconTint="@color/deen_gp_txt_gray_secondary"
            app:icon="@drawable/ic_deen_gp_time_off"
            app:backgroundTint="@color/deen_white"
            app:strokeColor="@color/deen_gp_border"
            app:strokeWidth="1dp"
            app:elevation="1dp"
            app:iconPadding="2dp"
            android:padding="@dimen/space_6"
            android:minWidth="60dp"/>

    </LinearLayout>




</androidx.constraintlayout.widget.ConstraintLayout>